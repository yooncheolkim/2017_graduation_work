<UserControl x:Class="Wpf.history"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="210" Background="#FFF6F9F2">
    <Border Name="border" BorderBrush="White" BorderThickness="2">
    <Grid PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown">
        <Image x:Name="image" HorizontalAlignment="Left" Height="170" Margin="0,40,0,0" VerticalAlignment="Top" Width="210"/>
        <TextBox x:Name="textBox_ng_res" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="210"/>
        <TextBox x:Name="textBox_time" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="210" Margin="0,20,0,0"/>
    </Grid>
    </Border>
</UserControl>

